#!/bin/bash

NODE_PROCESS_NUM=0
TURN_NUM=0
MAX_TURN=16
MY_PWD=`cat ~/MyConfigFiles/.password | base64 --decode`


echo $MY_PWD | sudo -S pkill node

until ((NODE_PROCESS_NUM==1||TURN_NUM>MAX_TURN))
do
  sleep 0.2s
  NODE_PROCESS_NUM=`ps aux | grep node -w | wc -l`
  let ++TURN_NUM
done

ps aux | grep node -w

