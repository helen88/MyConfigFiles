#!/bin/bash

MONGO='/opt/mongo/current/bin/mongo'

$MONGO gam_local --eval "db.user_combat.remove({}); db.user_id_cambatid.remove({});"

if [ "$1" == "1" ]
then
	echo
	echo "*** user_campaign is reserved ***"
	echo
else
$MONGO gam_local --eval "db.user_campaign.remove({});"
fi  #ifend

$MONGO gam_timers_local --eval "db.timerqueue.remove({});"
