#!/usr/bin/env node

var path = require('path');
var exec = require('child_process').exec;

var pathList = process.env.PATH.split(':');

for(var i = 0; i < pathList.length; i++) {
  if(pathList[i].indexOf('.nvm/v') !== -1) {
    var desPath = path.dirname(pathList[i]) + '/lib/node_modules';
    var cmd = 'ln -shf ' + desPath + ' node_modules'
    // console.log('cmd : ', cmd);
    exec(cmd, function (error, stdout, stderr) {
          if (error !== null) {
            console.log('' + error);
          } else {
            console.log('OK ~');
          }
        });
    return;
  }
}

