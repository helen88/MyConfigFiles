# aliases
alias reloadzsh="exec zsh && source ~/.zshrc"

alias psn="ps aux | grep node -w"
alias mtl="multitail /var/log/sparx/admin.log /var/log/sparx/api.log /var/log/sparx/timerd.log"
alias ta="tail -f /var/log/sparx/api.log"

alias cdg="cd $GAM/sparx_gam"
alias cdl="cd /var/log/sparx"
alias cds="cd $GAM/sparx_gam/sparx/scripts"
alias ut="$GAM/sparx_gam/sparx/scripts/test.sh"

alias ssvr="cdg && cat $CONF_DIR/.password | sudo -S ./scripts/local.sh && ota"
alias ksvr="cat $CONF_DIR/.password | sudo -S pkill node"

alias ....="cd ../../.."
alias .....="cd ../../../.."
alias cd-="cd -"
alias l="ls"
alias la="ls -la"
alias ll="la"
alias lm='ll | more'
alias df='df -h'
alias du='du -h -d1'
alias cp='cp -iR'

alias mv='mv -i'
alias rm='rm -ivr'
alias md='mkdir -p'
alias ztar='tar -czvf'
alias uztar='tar -xzvf'
alias ubz2tar='tar -jvxf'
alias ttar='tar -tvf'
alias man='man -a'
alias vi='vim'
alias mvi='mvim'
alias pgr='ps aux | grep'
alias pms='pomelo start'

alias gitk='/usr/local/git/bin/gitk'
alias ga='git add --ignore-removal'
alias gsu='git submodule update'

alias ni='node-inspector&'

