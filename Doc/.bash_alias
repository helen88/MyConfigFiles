# aliases

alias lnbashrc='pushd ~ && rm -rf ./.bashrc && ln -s $MY_DIR/.bashrc ./.bashrc && popd'
alias reloadbash="lnbashrc && source ~/.bashrc"
alias lnvimrc='pushd ~ && rm -rf ./.vimrc && ln -s $MY_DIR/.vimrc ./.vimrc && popd'

alias cdgam="cd $GAM"
alias cdg="cd $GAM/sparx_gam"
alias cdc="cd $GAM/client_gam"

alias cdconf="cd $MY_DIR"

alias ....="cd ../../.."
alias .....="cd ../../../.."
alias cd-="cd -"
alias l="ls"
alias la="ls -lah"
alias ll="la"
alias lm='ll | more'
alias cp='cp -iR'

alias mv='mv -i'
alias rm='rm -ivr'
alias md='mkdir -p'
alias man='man -a'
alias vi='vim'
alias mvi='mvim'

